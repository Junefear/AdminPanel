@model List<AdminPanel.Models.owl_DynamicPage>
@{
    ViewBag.Title = "DynamicList";
}


<div class="main-content">
    <div class="main-content-inner">
        @Html.Partial("_BreadCrumbs")

        <div class="page-content">
            <!-- /.ace-settings-container -->
            <div class="page-header">
                <h1>
                    Dashboard
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        overview &amp; stats
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <a href="@Url.Action("DynamicAddOrEdit","Dynamic")" class="button"><span>New</span></a>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Dynamic Sayfa İsmi</th>
                        <th>İcerik</th>
                        <th>İşlemler</th>
                
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@Html.Raw(item.Info)</td>
                        <td>
                            <a class="edit" href="@Url.Action("DynamicAddOrEdit","Dynamic")/@item.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                            <a class="delete" href="@Url.Action("NewsDelete","Dynamic")/@item.Id"><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>

            <!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->
