@model List<AdminPanel.Models.owl_Account>
@{
    ViewBag.Title = "AccountList";
}


<div class="main-content">
    <div class="main-content-inner">
        @Html.Partial("_BreadCrumbs")

        <div class="page-content">
            <!-- /.ace-settings-container -->
            <div class="page-header">
                <h1>
                    Dashboard
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        overview &amp; stats
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <a href="@Url.Action("AccountAddOrEdit","Account")" class="button"><span>New</span></a>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>E-Mail</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserName</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>
                            <a class="edit" href="@Url.Action("AccountAddOrEdit","Account")/@item.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                            <a class="delete" href="@Url.Action("NewsDelete","Account")/@item.Id"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

            <!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->
