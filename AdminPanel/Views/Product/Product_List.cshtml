@model List<AdminPanel.Models.HotProduct>
@{
    ViewBag.Title = "HotProduct";
}


<div class="main-content">
    <div class="main-content-inner">
        @Html.Partial("_BreadCrumbs")

        <div class="page-content">
            <!-- /.ace-settings-container -->
            <div class="page-header">
                <h1>
                    Dashboard
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        overview &amp; stats
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <a href="@Url.Action("Product_AddOrEdit","Product")" class="button"><span>New</span></a>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Stok No</th>
                        <th>Fiyat TL</th>
                        <th>Adet No</th>
                        <th>Info</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var itemas in Model)
                    {
                        <tr>
                            <td>@itemas.Id</td>
                            <td>@itemas.Code</td>
                            <td>@itemas.Name</td>
                            <td>@itemas.Stok_No</td>
                            <td>@itemas.Fiyat_No</td>
                            <td>@itemas.Adet_No</td>
                            <td>@Html.Raw(itemas.Info)</td>
                            <td>
                                <a class="edit" href="@Url.Action("Product_AddOrEdit","Product")/@itemas.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                <a class="delete" href="@Url.Action("NewsDelete","Product")/@itemas.Id"><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->
